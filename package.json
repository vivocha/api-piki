{
  "name": "api-piki",
  "version": "0.1.0",
  "description": "An Open API Specification (fka Swagger) parser & Mocha/Chai-based API test skeletons generator",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 90 --branches 50 --functions 90 --lines 90",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "watch:test": "npm t -- -w",
    "test": "mocha",
    "cover": "nyc --reporter=lcov --reporter=text npm t",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"    
  },
  "bin": {
    "piki": "./index.js"
  },
  "keywords": [
    "API",
    "Open",
    "API",
    "Specification",
    "API",
    "doc",
    "Test"
  ],
   "files": [
    "src",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "author": "Antonio Pintus <apintus@vivocha.com>",
  "license": "MIT",
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "rewire": "^2.5.2",
    "supertest": "^3.0.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.5",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "2.0.0",
    "semantic-release": "^6.3.2"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "debug": "^2.6.1",
    "lodash": "^4.17.4",
    "request": "^2.79.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    }
  }
}
